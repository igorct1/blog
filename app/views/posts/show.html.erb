<div class="shadow-md bg-zinc-800 rounded-md p-4 py-6 m-6">
  <div class="text-center mb-5">
    <h1 class="text-2xl">
      <%= @post.title %>
    </h1>
    <p class="text-zinc-400 text-sm">
      Por
      <%= @post.author %>
      <br>
      <%= l @post.created_at, format: :long%>
    </p>
  </div>
  <div class="px-5">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </div>
</div>
